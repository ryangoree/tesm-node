{
  "name": "tsm-node",
  "version": "0.0.0",
  "description": "A custom module loader for node to load typescript modules as esm.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsup"
  },
  "dependencies": {
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.1",
    "tsconfig-paths": "^4.1.2",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "tsconfig-paths": ">=4"
  },
  "engines": {
    "node": ">=16"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "tsm-node.sh"
  ],
  "bin": "tsm-node.sh",
  "author": "@ryegoree (https://twitter.com/ryegoree)",
  "homepage": "https://github.com/ryangoree/tsm-node",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryangoree/tsm-node"
  },
  "bugs": {
    "url": "https://github.com/ryangoree/tsm-node/issues"
  },
  "keywords": [
    "typescript",
    "module",
    "td-node",
    "loader",
    "tsconfig",
    "esm",
    "ts"
  ]
}
